<h3>Restaurant Reviews</h3>
  <% @restaurant.comments.each do|comment| %>
    <h4><%= comment.comment %></h4>
        <%= comment.user.email %><br>
        <%= time_ago_in_words(comment.created_at) %> <br>
        <% if comment.user.email == current_user.email %>
    <%= link_to 'Edit comment', edit_restaurant_comment_path( @restaurant, comment.id ) %><br>
    <%= link_to 'Destroy comment', restaurant_comment_path( @restaurant, comment.id ), method: :delete, data:{ confirm:"Are you sure?"} %><br>
    <% end %>
<% end %>

<h3>Add comment</h3>
  <%= form_for([@restaurant, @restaurant.comments.build]) do |f| %>
    <%= f.text_area :comment %><br>
    <%= f.submit %>
  <% end %><br>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @restaurant.name %></h1>
    </div>

    <div class="col-md-4">
      <%= image_tag @restaurant.image, class: "img-responsive center-block" %>
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Opening Hour:</strong> <%= @restaurant.opening_hours %></li>
          <li><strong>Tel:</strong> <%= @restaurant.tel %></li>
          <li><strong>Address:</strong> <%= @restaurant.address %></li>
        </ul>
      </div>
      <div class="text-center">
        <%= render :partial => 'restaurants/favorites', :locals => { :restaurant => @restaurant } %>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @restaurant.description %>
    </div>

    <div class="clearfix"></div>

    <hr>

  </div>
</div>

<!-- 更換使用btn btn-danger -->
<% if restaurant.find_my_favorite(current_user) %>
  <%= link_to unfavorite_restaurant_path(restaurant), method: :post, class: "btn btn-danger" do %>
    UnFavorite
  <% end %>
<% else %>
  <%= link_to favorite_restaurant_path(restaurant), method: :post, class: "btn btn-danger" do %>
    Favorite
  <% end %>
<% end %>

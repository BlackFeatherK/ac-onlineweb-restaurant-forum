<div class="container">
  <div class="row">

    <ul class="nav nav-tabs">
      <li role="presentation" class="active">
        <%= link_to '餐廳', root_path %>
      </li>
      <li role="presentation">
        <%= link_to 'TOP10人氣餐廳', ranking_restaurants_path %>
      </li>
      <li role="presentation">
        <%= link_to '達人專頁', users_path %>
      </li>
    </ul>

  </div>
</div>

<br>

<div class="container">
  <div class="row">

    <ul class="nav nav-pills nav-pills-center">
      <li role="presentation">
        <%= link_to "全部餐廳", root_path %>
      </li>
      <% @categories.each do |category| %>
        <li role="presentation" class="<%= "active" if category == @category %>">
          <%= link_to category_restaurants_path(category) do %>
            <%= category.name %>
          <% end %>
        </li>
      <% end %>
    </ul>

    <br>

    <% @restaurants.each do |restaurant| %>
      <div class="col-sm-6 col-md-4">
        <div class="restaurant-item">
          <%= link_to restaurant_path(restaurant) do %>
            <%= image_tag restaurant.image, class: "img-responsive center-block" %>
          <% end %>
          <div class="caption">
            <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
            <p><%= truncate(restaurant.description, length: 100) %></p>
            <div class="text-right">
              <%= render :partial => 'restaurants/favorites', :locals => { :restaurant => restaurant } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="clearfix"></div>

  </div>
</div>
